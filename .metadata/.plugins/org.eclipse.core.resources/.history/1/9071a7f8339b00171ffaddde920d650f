package Grafica;

import java.awt.Point;
import javax.swing.Icon;
import javax.swing.JLabel;

import Logica.CaminanteBlanco;
import Logica.Enemigo;

public class gCaminanteBlanco 
{

	CaminanteBlanco caminanteB;
	private movCaminanteBlanco movimientoThread;
	private boolean seMueve;
	protected Icon imagen;
	
	protected Point mPosicion;
	protected JLabel mGrafico;
	protected final int mWidth = 32;
	protected final int mHeight = 32;
	
	public gCaminanteBlanco(int x, int y, Enemigo caminante) 
	{
		this.mPosicion = new Point(x, y);
		caminanteB = (CaminanteBlanco) caminante;	
	}
	
	
	public JLabel getGrafico()
	{
		if (mGrafico == null) 
		{
			mGrafico = new JLabel(this.mImages[0][0]);
			mGrafico.setBounds(this.mPosicion.x, this.mPosicion.y,this.mWidth, this.mHeight);
		}
		return mGrafico;
	}
	
}
